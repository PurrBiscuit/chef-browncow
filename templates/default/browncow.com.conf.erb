<VirtualHost *:80>
  ServerName <%= @server_name %>
  ServerAlias
  DocumentRoot <%= @web_dir %>

  <Directory <%= @web_dir %>>
    Options FollowSymLinks
    AllowOverride <%= [ @allow_override || "None" ].flatten.join(" ") %>
    Order allow,deny
    Allow from all
  </Directory>

  <Location /server-status>
    SetHandler server-status

    Order Deny,Allow
    Deny from all
    Allow from 127.0.0.1
  </Location>

  LogLevel info
  LogFormat "\"%{HTTP_CLIENT_IP}e\" %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-agent}i\"" client_ip
  ErrorLog <%= @log_dir %>/www-error.log
  CustomLog <%= @log_dir %>/www-access.log client_ip

  DirectoryIndex <%= @indexes.flatten.join(" ") %>
</VirtualHost>